@using Dominio
@model List<Cliente>

@{
    ViewData["Title"] = "Listado de Clientes";
}

<h2 class="mt-4 mb-4 text-primary">Listado de Clientes</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger">@ViewBag.Mensaje</div>
}

@if (Model.Count == 0)
{
    <p>No hay clientes registrados.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Documento</th>
            <th>Nacionalidad</th>
            <th>Tipo</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Cliente c in Model)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.Email</td>
                <td>@c.Documento</td>
                <td>@c.Nacionalidad</td>
                <td>@(c is ClientePremium ? "Premium" : "Ocasional")</td>
            </tr>
        }
        </tbody>
    </table>
}