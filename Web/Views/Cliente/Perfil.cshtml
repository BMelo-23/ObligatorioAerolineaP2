@using Dominio
@{
    ViewBag.Title = "Perfil";
    Cliente cliente = (Cliente)ViewBag.Cliente;
}

<h2 class="mt-4 mb-4 text-primary">Mi Perfil</h2>

<div class="container">
    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger">@ViewBag.Mensaje</div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <p><strong>Nombre:</strong> @cliente.Nombre</p>
                <p><strong>Email:</strong> @cliente.Email</p>
                <p><strong>Documento:</strong> @cliente.Documento</p>
                <p><strong>Nacionalidad:</strong> @cliente.Nacionalidad</p>

                @if (cliente is ClientePremium)
                {
                    ClientePremium cp = (ClientePremium)cliente;
                    <p><strong>Puntos:</strong> @cp.Puntos</p>
                }
            </div>
        </div>
    }
</div>